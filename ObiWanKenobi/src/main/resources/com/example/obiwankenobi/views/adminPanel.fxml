<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.obiwankenobi.AdminController">

    <children>
        <VBox spacing="20" style="-fx-background-color: #f9f9f9;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- Nagłówek -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <children>
                    <Label prefHeight="35.0" prefWidth="685.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #145a32;" text="Panel administratora" />

                    <Button onAction="#addUser" prefHeight="35" prefWidth="108.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px;" text="Dodaj konto" />

                    <Button fx:id="logoutBtn" onAction="#logout" prefHeight="35" prefWidth="106.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px;" text="Wyloguj" />
                </children>
            </HBox>

            <!-- Tabela -->
            <TableView fx:id="tableView" prefHeight="450" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="100" text="Imię" />
                    <TableColumn fx:id="scndNameColumn" prefWidth="100" text="Nazwisko" />
                    <TableColumn fx:id="emailColumn" prefWidth="150" text="Email" />
                    <TableColumn fx:id="cityColumn" prefWidth="100" text="Miasto" />
                    <TableColumn fx:id="passColumn" prefWidth="100" text="Hasło" />
                    <TableColumn fx:id="salaryColumn" prefWidth="100" text="Wynagrodzenie" />
                    <TableColumn fx:id="departmentColumn" prefWidth="150" text="Dział" />
                    <TableColumn fx:id="roleColumn" prefWidth="100" text="Stopień" />
                    <TableColumn fx:id="actionColumn" prefWidth="100" text="Akcje" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
