<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="630.0" prefWidth="634.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.obiwankenobi.ManagerController">

    <children>

        <!-- Nagłówek -->
        <HBox alignment="CENTER" prefHeight="80.0">
            <children>
                <Label prefHeight="35.0" prefWidth="518.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #145a32;" text="Zarządzaj zadaniami" />
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" prefHeight="29.0" prefWidth="51.0" style="-fx-text-fill: #145a32; -fx-background-color: #f9f9f9; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 5;" text="X" />
            </children>
        </HBox>

        <!-- Lista zadań -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="420.0" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="taskListContainer" spacing="15" style="-fx-background-color: transparent;" />
            </content>
        </ScrollPane>

        <!-- Przyciski: dodaj / magazyn -->
        <HBox alignment="CENTER" prefHeight="125.0" prefWidth="634.0" spacing="20">
            <children>
                <Button fx:id="addTaskBtn" onAction="#addTask" prefHeight="45" prefWidth="164.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Dodaj Zadanie" />

                <Button fx:id="StatusWareHauseBtn" onAction="#StatusWareHause" prefHeight="45" prefWidth="171.0" style="-fx-background-color: #FFC849; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8;" text="Stan magazynu" />
                <Button fx:id="logoutBtn" onAction="#logout" prefHeight="45.0" prefWidth="150" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8;" text="Wyloguj" />
            </children>
        </HBox>

    </children>
</VBox>
