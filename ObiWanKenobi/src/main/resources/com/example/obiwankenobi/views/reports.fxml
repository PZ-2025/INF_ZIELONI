<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.obiwankenobi.ReportController">
   <children>
      <VBox spacing="20" style="-fx-background-color: #f9f9f9;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
         </padding>

         <!-- Nagłówek z przyciskiem zamknięcia -->
         <HBox>
            <children>
               <Label prefHeight="45.0" prefWidth="400.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #145a32;" text="Raporty" />
               <Button fx:id="reportsClose" mnemonicParsing="false" onAction="#reportsClose" prefHeight="21.0" prefWidth="40.0" style="-fx-text-fill: #145a32; -fx-background-color: #f9f9f9; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 5;" text="X" />
            </children>
         </HBox>

         <!-- Lista raportów -->
         <VBox alignment="CENTER" prefHeight="292.0" prefWidth="440.0" spacing="20">
            <HBox alignment="CENTER" spacing="10">
               <Label contentDisplay="CENTER" prefHeight="48.0" prefWidth="371.0" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Raport pracowników" />
               <Button onAction="#userReportShow" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-font-size: 13;" text="Wybierz" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <Label prefHeight="59.0" prefWidth="371.0" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Raport zadań" />
               <Button onAction="#taskReportShow" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-font-size: 13;" text="Wybierz" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <Label prefHeight="48.0" prefWidth="370.0" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Raport magazynowy" />
               <Button onAction="#warehouseReportShow" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-font-size: 13;" text="Wybierz" />
            </HBox>
            <Button fx:id="clearButton" contentDisplay="CENTER" onAction="#reportsClose" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" text="Powrót" />
         </VBox>
      </VBox>
   </children>
</AnchorPane>
