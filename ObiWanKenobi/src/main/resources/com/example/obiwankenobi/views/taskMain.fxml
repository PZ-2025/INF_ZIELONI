<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="60.0" prefWidth="530.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.obiwankenobi.TaskView">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="530.0" spacing="20.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #145a32;" text="Zadanie" />

            <Label fx:id="taskId" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="1" />

            <Label fx:id="taskDate" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="28.03.2025" />

            <Label fx:id="taskStatus" prefHeight="20.0" prefWidth="87.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Zakończone" />

            <Region prefHeight="35.0" prefWidth="75.0" HBox.hgrow="ALWAYS" />

            <Button fx:id="detailsButton" onAction="#more" prefHeight="35.0" prefWidth="101.0" style="-fx-background-color: #FFC849; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8;" text="Szczegóły" />
         </children>
      </HBox>
   </children>
</AnchorPane>
